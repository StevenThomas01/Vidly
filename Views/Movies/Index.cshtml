@model List<Vidly.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (Model.Count == 0)
{
    <text>No movie found.</text>
}
else
{
    <ul>
        @foreach (var movie in Model)
        {
            <li>@Html.ActionLink(@movie.Name, "Details", new { id = @movie.Id })</li>
        }
    </ul>

}
