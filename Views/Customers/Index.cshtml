@model List<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (Model.Count == 0)
{
    <text>No customer found.</text>
}
else
{
    <ul>
        @foreach (var customer in Model)
        {
            <li>@Html.ActionLink(@customer.Name, "Details", new { id = customer.Id })</li>
        }
    </ul>

}


